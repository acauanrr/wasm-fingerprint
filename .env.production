# Production Environment Variables for Heroku Deployment
# This file documents all environment variables needed for production
# Use: heroku config:set $(cat .env.production | grep -v '^#' | grep -v '^$' | tr '\n' ' ')

# === Core Application Settings ===
NODE_ENV=production
HOST=0.0.0.0

# === Admin Credentials ===
# IMPORTANT: Change these before deploying to production!
# Generate secure values using: openssl rand -hex 32
# ADMIN_USERNAME=your_secure_username
# ADMIN_PASSWORD=your_very_secure_password_here
# ADMIN_TOKEN=generate_with_openssl_rand_hex_32

# === Feature Flags ===
# Enable/disable specific fingerprinting features
ENABLE_CANVAS=true
ENABLE_WEBGL=true
ENABLE_AUDIO=true
ENABLE_HARDWARE_BENCHMARKS=true
ENABLE_PORT_CONTENTION=true
ENABLE_ANALYTICS=true

# === Security Settings ===
# CORS configuration for production
CORS_ORIGIN=*
CORS_CREDENTIALS=true
ENABLE_COOP_COEP=true

# Rate limiting (optional - disabled by default)
ENABLE_RATE_LIMIT=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# === Performance Settings ===
# API timeout in milliseconds
API_TIMEOUT=30000

# Benchmark configuration
BENCHMARK_CPU_ITERATIONS=1000000
BENCHMARK_MEMORY_SIZE_MB=1
BENCHMARK_CRYPTO_ITERATIONS=10000
BENCHMARK_TIMEOUT_MS=5000

# === Storage Configuration ===
DATA_DIR=/app/data
LOG_FILE=fingerprints.log
STATS_FILE=stats.json
MAX_LOG_SIZE_MB=100
MAX_FINGERPRINT_AGE_DAYS=30

# === Logging Configuration ===
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_CONSOLE_LOG=true

# === Database Configuration (for future use) ===
DB_TYPE=sqlite
DB_ENABLED=false

# === Redis Configuration (for future use) ===
REDIS_ENABLED=false

# === External Services (optional) ===
# GEOIP_API_KEY=your_geoip_api_key_here
# THREAT_INTEL_API_KEY=your_threat_intel_api_key_here