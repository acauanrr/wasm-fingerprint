# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_BASE_URL=http://localhost:3000
API_VERSION=v1
API_TIMEOUT=30000

# Security Headers (for SharedArrayBuffer support)
ENABLE_COOP_COEP=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Data Storage
DATA_DIR=./data
LOG_FILE=fingerprints.log
STATS_FILE=stats.json
MAX_LOG_SIZE_MB=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_CONSOLE_LOG=true

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Fingerprint Collection Settings
MAX_FINGERPRINT_AGE_DAYS=30
ENABLE_CANVAS=true
ENABLE_WEBGL=true
ENABLE_AUDIO=true
ENABLE_HARDWARE_BENCHMARKS=true
ENABLE_PORT_CONTENTION=true

# Benchmark Settings
BENCHMARK_CPU_ITERATIONS=1000000
BENCHMARK_MEMORY_SIZE_MB=1
BENCHMARK_CRYPTO_ITERATIONS=10000
BENCHMARK_TIMEOUT_MS=5000

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=/api/analytics

